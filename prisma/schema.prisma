// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  cub
  adolescent
  elderly
}

enum Sizes {
  small
  medium
  big
}

enum Independences {
  low
  medium
  high
}

enum Types {
  cat
  dog
}

model Org {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  address  String
  cep      String
  whatsapp String
  password String

  @@map("orgs")
}

model Pet {
  id           String        @id @default(uuid())
  name         String
  description  String
  city         String
  age          Age
  size         Sizes
  independence Independences
  type         Types

  @@map("pets")
}
